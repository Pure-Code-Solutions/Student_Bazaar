<!DOCTYPE html>
<html lang="en">
<%- include('./partials/navbar') %>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account | CampusShop</title>

</head>
<body>
    
    
    <main class="account-page">
        <div class="page-header">
            <h1>Account Info</h1>

        </div>
        
        <div class="account-container">
            <%- include('./partials/account-aside') %>
            
            <div class="account-content">
         

                
                <!-- Orders Section -->
                <section class="account-section" id="orders">
                    <h2>My Orders</h2>
                    
                    <div class="orders-tabs">
                        <button class="order-tab active" data-tab="all">All Orders</button>
                        <button class="order-tab" data-tab="processing">Processing</button>
                        <button class="order-tab" data-tab="shipped">Shipped</button>
                        <button class="order-tab" data-tab="delivered">Delivered</button>
                    </div>
                    
                    <div class="orders-list">
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
                                    <h3>Order #12345</h3>
                                    <span class="order-date">March 1, 2025</span>
                                </div>
                                <div class="order-status">
                                    <span class="status-shipped">Shipped</span>
                                </div>
                            </div>
                            
                            <div class="order-items">
                                <div class="order-item">
                                    <img src="images/backpack.jpg" alt="Campus Backpack">
                                    <div class="item-name">Campus Backpack</div>
                                    <div class="item-price">$42.50</div>
                                </div>
                                <div class="order-item">
                                    <img src="images/notebook.jpg" alt="5-Subject Spiral Notebook">
                                    <div class="item-name">5-Subject Spiral Notebook</div>
                                    <div class="item-price">$12.99</div>
                                </div>
                            </div>
                            
                            <div class="order-footer">
                                <div class="order-total">
                                    <span>Total:</span>
                                    <span class="total-amount">$55.49</span>
                                </div>
                                <div class="order-actions">
                                    <a href="#" class="btn-outline">Track Order</a>
                                    <a href="#" class="btn-link">View Details</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="order-card">
                            <div class="order-header">
                                <div class="order-info">
                                    <h3>Order #12339</h3>
                                    <span class="order-date">February 20, 2025</span>
                                </div>
                                <div class="order-status">
                                    <span class="status-delivered">Delivered</span>
                                </div>
                            </div>
                            
                            <div class="order-items">
                                <div class="order-item">
                                    <img src="images/calculator.jpg" alt="Scientific Calculator">
                                    <div class="item-name">Scientific Calculator</div>
                                    <div class="item-price">$19.99</div>
                                </div>
                            </div>
                            
                            <div class="order-footer">
                                <div class="order-total">
                                    <span>Total:</span>
                                    <span class="total-amount">$19.99</span>
                                </div>
                                <div class="order-actions">
                                    <a href="#" class="btn-outline">Buy Again</a>
                                    <a href="#" class="btn-link">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                

            </div>
        </div>
    </main>
    
    <footer>
        <!-- Same footer as other pages -->
    </footer>
    <style>
        
    </style>
   
    <link rel="stylesheet" href="../styles/account.css">
</body>
</html>