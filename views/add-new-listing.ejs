<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Listing</title>
    <link rel="stylesheet" href="../styles/main.css">
    <link rel="stylesheet" href="../styles/listing.css">
</head>
<body>
    <header>
        <nav>
            <a href="/" class="logo">YourLogo</a>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </nav>
    </header>
    
    <div class="listing-container">
        <form id="ebay-listing-form">
            <!-- Title Section -->
            <section class="listing-section title-section">
                <h2>Title</h2>
                <input 
                    type="text" 
                    class="title-input" 
                    placeholder="Enter your listing title"
                    maxlength="80"
                    required
                >
                <!--small>Include details such as Tag, color, size, specs, condition, etc.</small-->
            </section>

            <!-- Item Specifics Section -->
            <section class="listing-section item-specifics-section">
                <h2>Item Specifics</h2>
                <div class="item-specifics-grid">
                    <div class="specific-input">
                        <label>Condition</label>
                        <select required>
                            <option value="">Select Condition</option>
                            <option value="new">New</option>
                            <option value="used">Used</option>
                            <option value="for-parts">For Parts</option>
                        </select>
                    </div>
                    <div class="specific-input">
                        <label>Category</label>
                        <select required>
                            <option value="">Select Condition</option>
                            <option value="new">New</option>
                            <option value="used">Used</option>
                            <option value="for-parts">For Parts</option>
                        </select>
                    </div>
                    <div class="specific-input Tag-selection">
                        <label>Tag</label>
                        <div class="checkbox-dropdown">
                            <button type="button" class="dropdown-toggle">Select Tags</button>
                            <div class="checkbox-options">
                                <label>
                                    <input type="checkbox" name="Tag" value="nintendo">
                                    Nintendo
                                </label>
                                <label>
                                    <input type="checkbox" name="Tag" value="sony">
                                    Sony
                                </label>
                                <label>
                                    <input type="checkbox" name="Tag" value="microsoft">
                                    Microsoft
                                </label>
                                <label>
                                    <input type="checkbox" name="Tag" value="other">
                                    Other
                                </label>
                            </div>
                        </div>
                    </div>
                    <!--div class="specific-input">
                        <label>Model</label>
                        <input type="text" placeholder="Enter model number">
                    </div>
                    <div class="specific-input">
                        <label>Color</label>
                        <input type="text" placeholder="Enter color">
                    </div-->
                </div>
            </section>

            <!-- Photos & Video Section -->
            <section class="listing-section photos-section">
                <h2>Photos & Video</h2>
                <div class="photo-upload-area">
                    <p>You can add up to 24 photos and a 1-minute video. Buyers want to see all details and angles.</p>
                    <div class="upload-buttons">
                        <button type="button" class="upload-btn">Upload from computer</button>
                        <button type="button" class="upload-btn">Upload from mobile</button>
                    </div>
                </div>
            </section>

            <!-- Description Section -->
            <section class="listing-section description-section">
                <h2>Description</h2>
                <textarea 
                    class="description-textarea" 
                    placeholder="Write a detailed description of your item"
                ></textarea>
            </section>

            <!-- Pricing Section -->
            <section class="listing-section pricing-section">
                <h2>Pricing</h2>
                <div class="price-input">
                    <label>Price</label>
                    <input 
                        type="number" 
                        step="0.01" 
                        min="0" 
                        placeholder="Enter your price"
                        required
                    >
                </div>
                <div class="pricing-options">
                    <label>
                        <input type="checkbox"> Best Offer
                    </label>
                </div>
            </section>

            <!-- Shipping Section -->
            <section class="listing-section shipping-section">
                <h2>Shipping</h2>
                <div class="shipping-option">
                    <label>Shipping Method</label>
                    <select required>
                        <option value="">Select Shipping Method</option>
                        <option value="usps-ground">USPS Ground Advantage</option>
                        <option value="ups-ground">UPS Ground</option>
                        <option value="fedex-ground">FedEx Ground</option>
                    </select>
                </div>
                <div class="shipping-details">
                    <p>Shipping cost will be calculated based on buyer's location and package weight.</p>
                </div>
            </section>

            <!-- Submit Button -->
            <div class="submit-section">
                <button type="submit" class="btn-primary">Create Listing</button>
            </div>
        </form>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
        const dropdownToggle = document.querySelector('.dropdown-toggle');
        const checkboxes = document.querySelectorAll('.checkbox-options input[type="checkbox"]');

        // Update dropdown text when checkboxes are selected
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', updateDropdownText);
        });

        function updateDropdownText() {
            const selectedTags = Array.from(checkboxes)
                .filter(cb => cb.checked)
                .map(cb => cb.nextSibling.textContent.trim());

            dropdownToggle.textContent = selectedTags.length > 0 
                ? selectedTags.join(', ') 
                : 'Select Tags';
        }
    });
    </script>
</body>
</html>